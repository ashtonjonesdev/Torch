    <com.leinardi.android.speeddial.SpeedDialView
        android:id="@+id/speed_dial_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:sdExpansionMode="top"
        app:sdMainFabAnimationRotateAngle="0"
        app:sdMainFabClosedBackgroundColor="@color/colorPrimaryLight"
        app:sdMainFabClosedSrc="@drawable/ic_highlight_black_24dp"
        app:sdMainFabOpenedBackgroundColor="@color/colorPrimaryLight"
        app:sdMainFabOpenedSrc="@drawable/ic_close_black_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>