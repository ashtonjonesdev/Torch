<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TorchDiscoveryIntroductionFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/torch_discovery_introduction_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Discover your torch"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/colorPrimaryLight"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_discovery_introduction_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/torch_discovery_introduction_text_view"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/answer_discovery_questions_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's discover your primary focus, goal, or purpose by answering the following questions. You can change any of your previous answers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_discovery_introduction_text_view"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/torch_discovery_introduction_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Begin Discovery"/>


</androidx.constraintlayout.widget.ConstraintLayout>